<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="407dp"
        android:layout_height="16dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="10dp"
        android:text="Active"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/activeActivityList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/activeActivityList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/activity_card"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_marginTop="8dp"
        android:minHeight="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_card3"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginTop="-126dp"
                android:contentDescription="CardImageViewDesc"
                android:scaleType="centerCrop"
                android:src="@drawable/actividades" />

            <com.google.android.material.chip.Chip
                android:id="@+id/date_chip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="121dp"
                android:text="31/05/2019"
                android:textAppearance="@style/chipTextAppearance"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#EB525252"
                app:chipIcon="@drawable/ic_date_range_white_24dp"
                app:iconStartPadding="5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/state_chip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="85dp"
                android:text="ATIVA"
                android:textAppearance="@style/chipTextAppearance"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#18bc26"
                app:chipIcon="@drawable/ic_nature_people_white_24dp"
                app:iconStartPadding="5dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="139dp"
                android:layout_marginTop="126dp"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="11dp"
        android:text="Inactive"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/inactiveActivityList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeActivityList" />

    <ListView
        android:id="@+id/inactiveActivityList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/activity_card2"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_marginTop="8dp"
        android:minHeight="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@+id/activity_card3"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginTop="-126dp"
                android:contentDescription="CardImageViewDesc"
                android:scaleType="centerCrop"
                android:src="@drawable/actividades" />

            <com.google.android.material.chip.Chip
                android:id="@+id/date_chip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="122dp"
                android:text="31/05/2019"
                android:textAppearance="@style/chipTextAppearance"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#EB525252"
                app:chipIcon="@drawable/ic_date_range_white_24dp"
                app:iconStartPadding="5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/state_chip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="85dp"
                android:text="TERMINADA"
                android:textAppearance="@style/chipTextAppearance"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#e82406"
                app:chipIcon="@drawable/ic_nature_people_white_24dp"
                app:iconStartPadding="5dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="139dp"
                android:layout_marginTop="127dp"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/activity_card3"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_marginBottom="8dp"
        android:minHeight="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginTop="-125dp"
                android:contentDescription="CardImageViewDesc"
                android:scaleType="centerCrop"
                android:src="@drawable/actividades" />

            <com.google.android.material.chip.Chip
                android:id="@+id/date1_chip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="121dp"
                android:text="31/05/2019"
                android:textAppearance="@style/chipTextAppearance"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#EB525252"
                app:chipIcon="@drawable/ic_date_range_white_24dp"
                app:iconStartPadding="5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/state1_chip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="85dp"
                android:text="PENDENTE"
                android:textAppearance="@style/chipTextAppearance"
                android:textColor="#FFFFFF"
                app:chipBackgroundColor="#ffbb00"
                app:chipIcon="@drawable/ic_nature_people_white_24dp"
                app:iconStartPadding="5dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="139dp"
                android:layout_marginTop="126dp"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>