<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/curveddialog">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/achievements_card_details"
        android:layout_width="281dp"
        android:layout_height="275dp"
        android:minHeight="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backgroundImage_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/yellow_achievement"
                android:contentDescription="CardImageViewDesc"
                android:scaleType="centerCrop" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/achievement_image_card_details"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignStart="@+id/backgroundImage_details"
                android:layout_alignTop="@+id/backgroundImage_details"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:minHeight="200dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/achievementImage_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:contentDescription="CardImageViewDesc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bootle" />

                    <TextView
                        android:id="@+id/txtAchievementTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:text="Apanhar Garrafinhas"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtAchievementTitle"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="182dp"
                        android:layout_marginTop="203dp"
                        android:text="Progresso" />

                    <TextView
                        android:id="@+id/txtAchievementProgresso"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtAchievementTitle"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="182dp"
                        android:layout_marginTop="224dp"
                        android:text="0"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/txtAchievementObjetivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="224dp"
                        android:layout_marginEnd="4dp"
                        android:text="100"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="224dp"
                        android:layout_marginEnd="33dp"
                        android:text="/" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>